<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="เครื่องคิดเลขอย่างง่าย"
        android:textStyle="bold"
        android:textSize="20dp"
        android:fontFamily="@font/mitr_regular"

        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textColor="#0000FF"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:text="ป้อนตัวเลขตัวที่หนึ่ง"
            android:fontFamily="@font/mitr_regular"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edt_first_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="@font/mitr_regular"
            android:inputType="numberDecimal" />



    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="แ้อนตัวเลขตัวที่สอง"
            android:fontFamily="@font/mitr_regular"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edt_second_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="@font/mitr_regular"
            android:inputType="numberDecimal" />



    </LinearLayout>
    <RadioGroup
        android:id="@+id/rdog_operator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:textAlignment="center">

        <RadioButton
            android:id="@+id/rdo_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mitr_regular"
            android:text="+"
            />

        <RadioButton
            android:id="@+id/rdo_substract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mitr_regular"

            android:text="-"

            />

        <RadioButton
            android:id="@+id/rdo_multiple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mitr_regular"

            android:text="*"

            />

        <RadioButton
            android:id="@+id/rdo_divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mitr_regular"

            android:text="/"

            />

    </RadioGroup>

    <Button
        android:id="@+id/btn_calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:fontFamily="@font/mitr_regular"
        android:text="คำนวณ"
        android:layout_marginTop="30dp"

        android:textAllCaps="false" />
    <TextView
        android:id="@+id/txt_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="ผลรับ"
        android:fontFamily="@font/mitr_regular"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:layout_marginTop="20dp"


        />

</LinearLayout>